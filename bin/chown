#!/bin/bash -e

sudo chown www-data:www-data /var/www/html/door/secret

sudo chown www-data:www-data /var/www/html/jma/data
sudo touch /var/log/jma.log
sudo chown www-data:www-data /var/log/jma.log

sudo mkdir -p /var/log/get-anime
sudo chown noyuno:noyuno /var/log/get-anime
sudo touch /var/log/get-anime.log
sudo chown noyuno:noyuno /var/log/get-anime.log

